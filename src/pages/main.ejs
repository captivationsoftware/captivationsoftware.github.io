<div class="popup">
  <div class="popup__box">
    <div class="popup__bg"></div>
    <div class="popup__item">
      <a href="#" class="popup__close">
        <svg class="icon-close">
          <use xlink:href="#icon-close"></use>
        </svg>
      </a>
      <div class="popup__row">
        <div class="popup__col">
          <div class="popup__txt">
            <div class="popup__txt-top">
              <h3>Interested?</h3>
              <h2>You know<br>what to do.</h2>
            </div>
            <p>Thank you for your interest in joining team CAPTIVATION!</p>
          </div>
        </div>
        <div class="popup__col">
          <form action="https://postform.io/send" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_to" value="<%= htmlWebpackPlugin.options.getData('contacts.json').jobs %>" />
            <input type="hidden" name="_redirect_to" value="<%= htmlWebpackPlugin.options.baseUrl %>#careers" />
            <input type="hidden" name="_name" value="Job Application" />
            <input type="hidden" name="_nonce" value="" />
            <input type="hidden" name="_reply_to_field" value="Email" />
            <div style="display: none;"><input type="text" name="_bottypotty" value="" /></div>
            <div class="form-group">
              <input type="text" id="popup-name" name="Name">
              <label for="popup-name">Name</label>
            </div>
            <div class="form-group">
              <input type="text" id="popup-email" name="Email">
              <label for="popup-email">Email</label>
            </div>
            <div class="form-group form-group--select">
              <select id="popup-position" name="Position">
                <option disabled selected value>Please Select...</option>
                <% htmlWebpackPlugin.options.getData('jobs.json').forEach(function(job) { %>
                  <option value="<%= job.title %>"><%= job.title %></option>
                <% }) %>
              </select>
              <label for="popup-position">Position</label>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="upload-box">
                  <a href="#" class="custom-upload">Resume</a>
                  <input type="file" class="custom-file" name="Resume">
                </div>
              </div>
              <div class="col-md-6">
                <button disabled class="btn-popup">
                  <em>
                    <span class="btn-popup__title">Submit</span>
                    <span class="btn-popup__icon">
                      <svg class="icon-small-logo-white">
                        <use xlink:href="#icon-small-logo-white"></use>
                      </svg>
                    </span>
                  </em>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
