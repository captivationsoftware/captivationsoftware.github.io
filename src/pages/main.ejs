  <div id="contact" class="home__contact animate">
    <div class="wrap">
      <div class="row align-items-center">
        <div class="col-md-5 col-lg-6">
          <div class="home__title">
            <h3>Contact Us</h3>
            <h2>We look forward to hearing from you!</h2>
          </div>
        </div>
        <div class="col-md-7 col-lg-6">
          <div class="contact">
            <form action="https://postform.io/send" method="POST" accept-charset="utf-8" enctype="multipart/form-data">
              <input type="hidden" name="_to" value="<%= htmlWebpackPlugin.options.getData('contacts.json').info %>" />
              <input type="hidden" name="_redirect_to" value="<%= htmlWebpackPlugin.options.baseUrl %>#contact" />
              <input type="hidden" name="_name" value="Contact Us Form Message" />
              <input type="hidden" name="_schema" value="{\"type\":\"object\",\"properties\":{\"Message\":{\"type\":\"string\",\"minLength\":30}},\"required\":[\"Message\"]}" />
              <input type="hidden" name="_nonce" value="" />
              <input type="hidden" name="_reply_to_field" value="Email" />
              <div style="display: none;"><input type="text" name="_bottypotty" value="" /></div>
              <div class="row">
                <div class="col-lg-6">
                  <div class="form-group">
                    <input id="contact-full-name" type="text" name="Name">
                    <label for="contact-full-name">Name</label>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <input id="contact-email-address" type="text" name="Email">
                    <label for="contact-email-address">Email</label>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <input id="contact-name" type="text" name="Company">
                <label for="contact-name">Company</label>
              </div>
              <div class="form-group">
                <textarea id="contact-message" data-gramm_editor="false" name="Message"></textarea>
                <label for="contact-message">Message</label>
              </div>
              <button disabled class="btn">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
